# Application
APP_NAME=Cross-Chain Bridge Aggregator
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bridge_aggregator
DB_ECHO=False
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Blockchain RPC Endpoints
# Alchemy API Key: Get from https://www.alchemy.com
# Infura API Key: Get from https://infura.io

# Ethereum (Alchemy + Infura fallback)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ETHEREUM_RPC_FALLBACK_URL=https://mainnet.infura.io/v3/YOUR_INFURA_API_KEY

# Arbitrum (Alchemy + Infura fallback)
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
ARBITRUM_RPC_FALLBACK_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_INFURA_API_KEY

# Optimism (Infura - Alchemy doesn't support Optimism)
OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_INFURA_API_KEY
OPTIMISM_RPC_FALLBACK_URL=https://mainnet.optimism.io

# Polygon (Alchemy + Infura fallback)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
POLYGON_RPC_FALLBACK_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_API_KEY

# Base (Alchemy + Public fallback)
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
BASE_RPC_FALLBACK_URL=https://mainnet.base.org

# Bridge API Keys
ACROSS_API_URL=https://across.to/api
STARGATE_API_URL=https://api.stargate.finance
CONNEXT_API_URL=https://api.connext.network
HOP_API_URL=https://api.hop.exchange

# DEX Aggregator APIs
# Velora API - https://developers.velora.xyz/api/velora-api/velora-market-api/master/api-v6.2
VELORA_API_URL=https://api.velora.xyz/v6.2

# OpenOcean API - https://apis.openocean.finance/developer/apis/swap-api/api-v4
OPENOCEAN_API_URL=https://open-api.openocean.finance/v4

# 0x API (optional)
ZEROX_API_URL=https://api.0x.org

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Transaction Monitoring
TX_MONITOR_INTERVAL=10
TX_TIMEOUT=1800
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=60

# Feature Flags
ENABLE_BRIDGE_HEALTH_MONITORING=True
ENABLE_CIRCUIT_BREAKER=True
ENABLE_TRANSACTION_SIMULATION=False
